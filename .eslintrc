{
    "env": {
       "es6": true,
       "browser": true,
       "node": true
    },
    "extends" : ["eslint:recommended", "plugin:react/recommended"],
    "settings": {
        "react": {
            "pragma": "React",
            "version": "detect"
        }
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules" : {
        "indent": ["error", 2],
        "quotes": [2, "single", { "allowTemplateLiterals": true }]
    }
}